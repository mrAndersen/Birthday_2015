<script type="text/javascript">
    window.onload = function(){
        var map;
        var target;
        var sent = function(){
            $('.registration p:not(.thx), .registration form, .registration .section-title').animate({
                'opacity' : 0
            },600,function(){
                $('.thx').show();
            });

            var d = setTimeout(function(){
                location.reload();
            },2500);
        };


        ymaps.ready(function(){
            map = new ymaps.Map("map", {
                center: [55.768699, 37.641962],
                zoom: 15
            });
            target = new ymaps.Placemark(
                    [55.768699, 37.641962],
                    {
                        content: 'Проспект Академика Сахарова, д. 10',
                        balloonContent: '15 Сестёр'
                    }
            );
            map.geoObjects.add(target);
        });

        $(document).on('click tap','.arrow-down',function(e){
            $('html, body').animate({
                scrollTop: $('.what-is-inside-cube-section').offset().top
            },500);
        });

        $(document).on('click tap','.arrow-up',function(e){
            $('html, body').animate({
                scrollTop: 0
            },1000);
        });

        $(document).on('submit','form',function(e){
            e.preventDefault();

            $.ajax({
                method: 'post',
                url : '/',
                data: $('form').serializeArray(),
                success: function(){
                    sent();
                },
                error: function(){
                    sent();
                }
            })

        });
    }
</script>

